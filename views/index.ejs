<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ERP Portal - Welcome</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    :root {
      --primary-blue: #1e90ff;
      --primary-teal: #14b8a6;
      --primary-purple: #7c3aed;
      --primary-pink: #ec4899;
      --primary-indigo: #4f46e5;
      --accent-orange: #f97316;
      --bg-light: #f0f4f8;
      --card-bg: #ffffff;
      --text-dark: #1f2937;
      --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Poppins", sans-serif;
      background: var(--bg-light);
      min-height: 100vh;
      color: var(--text-dark);
      overflow-x: hidden;
    }

    .header {
      position: sticky;
      top: 0;
      z-index: 1000;
      background: var(--card-bg);
      border-bottom: 1px solid #e5e7eb;
      box-shadow: var(--shadow);
    }

    .container {
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
      padding: 2rem 1.5rem;
    }

    @media (max-width: 768px) {
      .container {
        padding: 1rem;
      }
    }

    .hero-section {
      min-height: 60vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      position: relative;
      margin-top: 3rem;
      margin-bottom: 3rem;
    }

    .blob-card {
      background: var(--card-bg);
      border-radius: 15px;
      box-shadow: var(--shadow);
      position: relative;
      overflow: hidden;
      padding: 2rem;
    }

    .feature-icon {
      font-size: 2.5rem;
      color: var(--primary-teal);
      margin-bottom: 1rem;
    }

    .text-flow {
      color: var(--text-dark);
    }

    .flowing-button {
      background: linear-gradient(135deg, var(--primary-blue), var(--primary-teal));
      background-size: 200% 200%;
      border: none;
      border-radius: 50px;
      padding: 1rem 2rem;
      color: var(--card-bg);
      font-weight: 600;
      font-size: 1.1rem;
      cursor: pointer;
      animation: gradientFlow 3s ease infinite;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      min-width: 120px;
      text-align: center;
      transition: background 0.3s ease;
    }

    .flowing-button:active {
      background: linear-gradient(135deg, var(--primary-teal), var(--primary-blue));
    }

    .flowing-button:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    @media (max-width: 640px) {
      .flowing-button {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
      }
    }

    @keyframes gradientFlow {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .slide-in-left {
      animation: slideInLeft 0.8s ease-out forwards;
      opacity: 0;
      transform: translateX(-50px);
    }

    @keyframes slideInLeft {
      to { opacity: 1; transform: translateX(0); }
    }

    .slide-in-right {
      animation: slideInRight 0.8s ease-out forwards;
      opacity: 0;
      transform: translateX(50px);
    }

    @keyframes slideInRight {
      to { opacity: 1; transform: translateX(0); }
    }

    .zoom-in {
      animation: zoomIn 1s ease-out forwards;
      opacity: 0;
      transform: scale(0.8);
    }

    @keyframes zoomIn {
      to { opacity: 1; transform: scale(1); }
    }

    .success-flow {
      background: linear-gradient(135deg, #10b981, #059669);
      color: var(--card-bg);
      padding: 1rem 2rem;
      border-radius: 30px;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      box-shadow: var(--shadow);
      animation: zoomIn 0.5s ease-out;
    }

    .error-flow {
      background: linear-gradient(135deg, #ef4444, #dc2626);
      color: var(--card-bg);
      padding: 1rem 2rem;
      border-radius: 30px;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      box-shadow: var(--shadow);
      animation: zoomIn 0.5s ease-out;
    }

    .footer-link {
      color: var(--text-dark);
      transition: color 0.3s ease;
    }

    .footer-link:active {
      color: var(--primary-teal);
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="header py-4 px-6 flex justify-between items-center slide-in-left">
    <h1 class="text-2xl font-bold text-flow">ERP Portal</h1>
    <nav class="slide-in-right">
      <a href="/login" class="flowing-button" aria-label="Go to login page">
        <i class="fas fa-sign-in-alt"></i> Login
      </a>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="container">
    <% if (typeof success !== 'undefined' && success) { %>
    <div class="success-flow zoom-in" id="success-message">
      <div class="flex items-center">
        <i class="fas fa-check-circle text-2xl mr-4"></i>
        <span class="font-semibold text-lg"><%= success %></span>
      </div>
      <button
        class="text-white hover:text-gray-200"
        onclick="dismissMessage('success-message')"
        aria-label="Close success message"
      >
        <i class="fas fa-times"></i>
      </button>
    </div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
    <div class="error-flow zoom-in" id="error-message">
      <div class="flex items-center">
        <i class="fas fa-exclamation-circle text-2xl mr-4"></i>
        <span class="font-semibold text-lg"><%= error %></span>
      </div>
      <button
        class="text-white hover:text-gray-200"
        onclick="dismissMessage('error-message')"
        aria-label="Close error message"
      >
        <i class="fas fa-times"></i>
      </button>
    </div>
    <% } %>

    <!-- Hero Section -->
    <section class="hero-section">
      <div class="text-center zoom-in">
        <h2 class="text-5xl font-bold text-flow mb-4">
          Welcome to the Future of Academic Management
        </h2>
        <p class="text-xl text-flow opacity-90 mb-6 max-w-2xl mx-auto">
          Streamline your academic journey with our intuitive ERP Portal. Manage records, track attendance, and stay connected seamlessly.
        </p>
        <a href="/login" class="flowing-button" aria-label="Get started with ERP Portal">
          <i class="fas fa-rocket"></i> Get Started
        </a>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-12">
      <h3 class="text-3xl font-bold text-flow text-center mb-8 slide-in-left">
        Why Choose Our ERP Portal?
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="blob-card slide-in-left">
          <i class="fas fa-users feature-icon"></i>
          <h4 class="text-xl font-semibold text-flow mb-2">Student Management</h4>
          <p class="text-flow">
            Easily manage student profiles, courses, and academic records in one place.
          </p>
        </div>
        <div class="blob-card zoom-in">
          <i class="fas fa-calendar-check feature-icon"></i>
          <h4 class="text-xl font-semibold text-flow mb-2">Attendance Tracking</h4>
          <p class="text-flow">
            Monitor attendance with real-time updates and detailed reports.
          </p>
        </div>
        <div class="blob-card slide-in-right">
          <i class="fas fa-file-upload feature-icon"></i>
          <h4 class="text-xl font-semibold text-flow mb-2">Document Upload</h4>
          <p class="text-flow">
            Securely upload and access academic documents anytime, anywhere.
          </p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-12">
      <div class="blob-card text-center zoom-in">
        <h3 class="text-3xl font-bold text-flow mb-4">
          Ready to Transform Your Academic Experience?
        </h3>
        <p class="text-lg text-flow mb-6 max-w-xl mx-auto">
          Join thousands of students and administrators using our ERP Portal to simplify academic management.
        </p>
        <a href="/login" class="flowing-button" aria-label="Join now">
          <i class="fas fa-sign-in-alt"></i> Join Now
        </a>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="py-6 px-4 bg-white border-t border-gray-200">
    <div class="container text-center">
      <p class="text-flow mb-4">
        Â© <%= new Date().getFullYear() %> ERP Portal. All rights reserved.
      </p>
      <div class="flex justify-center space-x-4 mb-4">
        <a href="/login" class="footer-link" aria-label="Go to login page">Login</a>
        <a href="/privacy" class="footer-link" aria-label="View privacy policy">Privacy Policy</a>
        <a href="/terms" class="footer-link" aria-label="View terms of service">Terms of Service</a>
      </div>
      <div class="flex justify-center space-x-4">
        <a href="https://facebook.com" class="footer-link" aria-label="Visit our Facebook page">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="https://twitter.com" class="footer-link" aria-label="Visit our Twitter page">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="https://linkedin.com" class="footer-link" aria-label="Visit our LinkedIn page">
          <i class="fab fa-linkedin-in"></i>
        </a>
      </div>
    </div>
  </footer>

  <script>
    // Auto-dismiss messages
    function dismissMessage(id) {
      const message = document.getElementById(id);
      if (message) {
        message.style.transition = "opacity 0.5s ease";
        message.style.opacity = "0";
        setTimeout(() => message.remove(), 500);
        console.log(`Dismissed message: ${id}`);
      }
    }

    if (document.getElementById("success-message")) {
      setTimeout(() => dismissMessage("success-message"), 5000);
    }
    if (document.getElementById("error-message")) {
      setTimeout(() => dismissMessage("error-message"), 5000);
    }

    // Intersection observer for animations
    document.addEventListener("DOMContentLoaded", () => {
      const elements = document.querySelectorAll(
        ".slide-in-left, .slide-in-right, .zoom-in"
      );
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.style.animationPlayState = "running";
              observer.unobserve(entry.target);
              console.log(`Animated element: ${entry.target.tagName}`);
            }
          });
        },
        { threshold: 0.2 }
      );
      elements.forEach((el) => observer.observe(el));

      // Log button clicks for debugging
      const buttons = document.querySelectorAll(".flowing-button, .footer-link");
      buttons.forEach((btn) => {
        btn.addEventListener("click", () => {
          console.log(`Clicked: ${btn.getAttribute("aria-label")}`);
        });
      });
    });
  </script>
</body>
</html>